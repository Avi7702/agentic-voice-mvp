{
  "name": "agentic-studio-voice-testing",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:smoke": "playwright test tests/production/smoke-test.spec.ts",
    "test:performance": "playwright test tests/production/performance.spec.ts",
    "test:accessibility": "playwright test tests/production/accessibility.spec.ts",
    "test:all": "playwright test tests/production/",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:install-deps": "playwright install-deps",
    "test:setup": "npm run test:install && npm run test:install-deps",
    "test:docker": "docker run --rm -v $(pwd):/app -w /app mcr.microsoft.com/playwright:v1.40.0-focal npx playwright test",
    "test:ci": "playwright test --reporter=junit --output-dir=test-results",
    "test:lighthouse": "lighthouse https://agentic-studio-voice-clean.vercel.app --config-path=lighthouse.config.js --output-path=./test-results/lighthouse-report.html --view",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:desktop": "playwright test --project='Desktop Chrome' --project='Desktop Firefox' --project='Desktop Safari'",
    "load-test": "k6 run tests/production/load-test.js",
    "load-test:light": "k6 run --vus 10 --duration 2m tests/production/load-test.js",
    "load-test:medium": "k6 run --vus 50 --duration 5m tests/production/load-test.js",
    "load-test:heavy": "k6 run --vus 100 --duration 10m tests/production/load-test.js",
    "load-test:stress": "k6 run --vus 200 --duration 5m tests/production/load-test.js",
    "load-test:json": "k6 run --out json=test-results/load-test-results.json tests/production/load-test.js",
    "load-test:csv": "k6 run --out csv=test-results/load-test-results.csv tests/production/load-test.js",
    "load-test:cloud": "k6 cloud tests/production/load-test.js",
    "install:k6": "curl https://github.com/grafana/k6/releases/download/v0.47.0/k6-v0.47.0-linux-amd64.tar.gz -L | tar xvz --strip-components 1",
    "setup:load-test": "mkdir -p test-results && npm run install:k6"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "19.1.13",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lighthouse": "^11.4.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "lucide-react": "^0.544.0",
    "next": "^15.5.4",
    "playwright": "^1.55.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
